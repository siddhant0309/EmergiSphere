# MediSentinel Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://medisentinel:password@localhost:5432/medisentinel
MONGODB_URL=mongodb://admin:password@localhost:27017/medisentinel
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (Alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Twilio Configuration (SMS and Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@medisentinel.com

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Legal System Integration
POLICE_API_ENDPOINT=https://api.police.gov/emergency
LEGAL_SYSTEM_API_KEY=your_legal_system_api_key
COURT_NOTIFICATION_URL=https://api.courts.gov/notifications

# Hospital Configuration
HOSPITAL_ID=your_hospital_id
EMERGENCY_DEPARTMENT_ID=your_ed_id
HOSPITAL_NAME=MediSentinel General Hospital

# Insurance APIs
INSURANCE_API_ENDPOINT=https://api.insurance.com/verify
INSURANCE_API_KEY=your_insurance_api_key

# FHIR/EHR Integration
FHIR_SERVER_URL=https://fhir.medisentinel.com
FHIR_CLIENT_ID=your_fhir_client_id
FHIR_CLIENT_SECRET=your_fhir_client_secret

# Google Calendar Integration
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GOOGLE_CALENDAR_ID=your_calendar_id

# Monitoring and Logging
ELASTICSEARCH_URL=http://localhost:9200
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_32_bytes
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development
API_VERSION=v1

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=100

# Compliance
HIPAA_COMPLIANCE_ENABLED=True
GDPR_COMPLIANCE_ENABLED=True
AUDIT_LOGGING_ENABLED=True

# Feature Flags
VOICE_PROCESSING_ENABLED=True
OCR_PROCESSING_ENABLED=True
REAL_TIME_NOTIFICATIONS_ENABLED=True
EMERGENCY_OVERRIDE_ENABLED=True 